<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/search_id_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@+id/search_id_card_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardElevation="4dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/search_id_toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:contentInsetStartWithNavigation="0dp">

            <RelativeLayout
                android:id="@+id/search_id_search_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <com.simplexorg.searchfragment.view.SearchEditText
                    android:id="@+id/search_id_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:backgroundTint="@android:color/transparent"
                    android:imeOptions="actionSearch|flagNoExtractUi"
                    android:inputType="text"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>
</RelativeLayout>